{
  "name": "piro-web-app",
  "description": "This is a boilerplate build with Vite, React 18, TypeScript, Vitest, Testing Library, TailwindCSS 3, Eslint and Prettier.",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "MODE=production tsc && MODE=production vite build",
    "serve": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --max-warnings=0",
    "lint-fix": "eslint --fix src --ext ts,tsx .",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss,css,json}'",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^5.3.2",
    "@emotion/react": "^11.11.3",
    "@material-tailwind/react": "^2.1.7",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@tanstack/react-query": "^5.8.1",
    "@toyota-research-institute/lakefront": "^5.4.1",
    "aws-amplify": "^5.3.12",
    "axios": "^1.6.2",
    "cypress-image-diff-js": "^2.1.3",
    "plotly.js": "^2.27.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-gtm-module": "^2.0.11",
    "react-hook-form": "^7.49.2",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.18.0",
    "react-select": "^5.8.0",
    "react-tooltip": "^5.25.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.14",
    "@types/react-gtm-module": "^2.0.3",
    "@types/react-plotly.js": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "cypress": "^13.6.4",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-image-diff-html-report": "^2.0.2",
    "cypress-xpath": "^2.0.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "happy-dom": "^12.10.3",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "step_definitions": "cypress/e2e/",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/json-logs",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  }
}
